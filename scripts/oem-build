#!/usr/bin/env bash

echo "==> Installing ansible and git"
sudo apt install ansible git

echo "==> Running ansible OEM playbook"
cd "$(dirname "$0")"/.. || exit 1
ansible-playbook -i hosts -c local -K -t oem oem.yml || exit 1

echo "Filling disk with zeros to assist with compression"
sudo dd if=/dev/zero of=/bigfile bs=1M; sudo sync; sudo rm bigfile
